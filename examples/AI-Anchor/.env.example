# AI Anchor Configuration - 修复版本

# 服务器配置
HOST=0.0.0.0
PORT=8000
DEBUG=true
LOG_LEVEL=INFO
SAVE_AUDIO_LOGS=false

# 嵌套模型配置 (使用__分隔符)
MODELS__HIGGS_AUDIO_MODEL=bosonai/higgs-audio-v2-generation-3B-base
MODELS__VOXTRAL_MODEL=mistralai/Voxtral-Mini-3B-2507
MODELS__OLLAMA_MODEL=hf.co/bartowski/huihui-ai_Mistral-Small-24B-Instruct-2501-abliterated-GGUF:Q4_K_M

# GPU配置
GPU__CUDA_VISIBLE_DEVICES=0
GPU__MAX_GPU_MEMORY_GB=48
GPU__ENABLE_GPU_MONITORING=true

# 音频配置
AUDIO__SAMPLE_RATE=24000
AUDIO__CHUNK_SIZE=1024
AUDIO__FORMAT=wav
AUDIO__MAX_DURATION=30
AUDIO__VAD_THRESHOLD=0.5
AUDIO__MIN_PAUSE_DURATION=0.5

# 对话配置
CONVERSATION__MAX_HISTORY=10
CONVERSATION__DEFAULT_LANGUAGE=en
CONVERSATION__CONTEXT_WINDOW_SIZE=4096

# 性能配置
PERFORMANCE__MAX_CONCURRENT_REQUESTS=5
PERFORMANCE__RESPONSE_TIMEOUT=30
PERFORMANCE__ENABLE_CACHING=true

# 安全配置
SECURITY__CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]